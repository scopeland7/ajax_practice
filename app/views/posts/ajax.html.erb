<h3><strong>Welcome to the best class <em>ever</em>...</strong></h3>

<script type='text/javascript'>

function loadPosts(){
	$.getJSON("/posts.json", function(data) {
		var html="";
		$.each(data, function(index) {
			html += "<b><i>" + data[index].content + "</i></b><br>";
		});
		$("#posts").html(html);
	});
}
</script>	

<div id='posts'>
	<a href="javascript:loadPosts();">Click me to get our posts!</a>













</div>